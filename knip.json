{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"ignore": [".papi/**"],
	"ignoreDependencies": ["@kheopskit/core", "@kheopskit/react", "tslib"],
	"workspaces": {
		".": {
			"entry": ["papi-whitelist.ts"]
		},
		"packages/core": {
			"ignore": [
				"src/utils/sleep.ts",
				"src/utils/throwAfter.ts",
				"src/utils/storage.ts"
			],
			"ignoreDependencies": ["@walletconnect/types", "@walletconnect/utils"]
		},
		"packages/react": {
			"ignoreDependencies": ["@types/react-dom", "react-dom"]
		},
		"examples/vite-react": {
			"entry": ["src/main.tsx", "src/styles.css"],
			"ignore": [
				"src/vite-env.d.ts",
				"src/components/ui/**",
				"src/lib/config/chains.ts",
				"src/lib/config/playgroundConfig.ts",
				"src/lib/getPolkadotApi.ts"
			],
			"ignoreBinaries": ["tailwindcss"]
		},
		"examples/nextjs-react": {
			"ignore": [
				"src/components/ui/**",
				"src/lib/config/chains.ts",
				"src/lib/config/playgroundConfig.ts",
				"src/lib/getPolkadotApi.ts"
			]
		},
		"examples/tanstack-start": {
			"ignore": [
				"src/components/ui/**",
				"src/lib/config/chains.ts",
				"src/lib/config/playgroundConfig.ts",
				"src/lib/getPolkadotApi.ts"
			]
		}
	}
}
